# ==========================================
# 数据库配置
# ==========================================
DATABASE_URL="mysql://root:password@localhost:3306/ai_copywriting"

# ==========================================
# Redis配置
# ==========================================
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# ==========================================
# JWT配置
# ==========================================
JWT_SECRET="your-jwt-secret-change-this-to-random-string-min-32-chars"
JWT_EXPIRES_IN="7d"

# ==========================================
# 微信小程序配置 ⚠️ 必须配置
# ==========================================
WECHAT_APP_ID="你的微信小程序AppID"
WECHAT_APP_SECRET="你的微信小程序AppSecret"

# 微信支付配置（暂时可以不配置）
WECHAT_MCH_ID=""
WECHAT_API_KEY=""
WECHAT_CERT_PATH=""
WECHAT_KEY_PATH=""
WECHAT_CONTENT_SECURITY_URL="https://api.weixin.qq.com/wxa/msg_sec_check"

# ==========================================
# AI Provider配置 ⚠️ 至少配置一个
# ==========================================
AI_PRIMARY_PROVIDER="deepseek"
AI_FALLBACK_PROVIDERS="siliconflow,groq"
AI_TIMEOUT="10000"
AI_MAX_RETRIES="2"

# DeepSeek API
DEEPSEEK_API_KEY="你的DeepSeek API Key"
DEEPSEEK_API_URL="https://api.deepseek.com/v1"
DEEPSEEK_MODEL="deepseek-chat"

# SiliconFlow API（备用）
SILICONFLOW_API_KEY="你的SiliconFlow API Key"
SILICONFLOW_API_URL="https://api.siliconflow.cn/v1"
SILICONFLOW_MODEL="deepseek-ai/DeepSeek-V2.5"

# Groq API（备用）
GROQ_API_KEY="你的Groq API Key"
GROQ_API_URL="https://api.groq.com/openai/v1"
GROQ_MODEL="llama-3.1-70b-versatile"

# ==========================================
# 日志配置
# ==========================================
LOG_LEVEL="info"

# ==========================================
# 服务配置
# ==========================================
NODE_ENV="development"
PORT="3000"
API_VERSION="v1"

# ==========================================
# 配额配置（每日免费次数）
# ==========================================
QUOTA_FREE_DAILY="20"
QUOTA_MONTHLY_DAILY="50"
QUOTA_YEARLY_DAILY="100"
